<body>
    <div class="container" id="login-form">
        <h2 class="title">Iniciar Sesión</h2>
        <div class="form-group">
            <label for="username">Usuario:</label>
            <input type="text" id="username" placeholder="Thomas Almada">
        </div>
        <div class="form-group">
            <label for="password">Contraseña:</label>
            <input type="password" id="password" placeholder="2002">
        </div>
        <button class="button" onclick="login()">Iniciar Sesión</button>
    </div>

    <div class="container hidden" id="menu">
        <h2 class="title">Menú Principal</h2>
        <div class="menu">
            <button class="button" onclick="showSection('asistencia')">Marca Ingreso-Asistencia</button>
            <button class="button" onclick="showSection('presencia')">Matriculados Presencia</button>
            <button class="button" onclick="showSection('database')">Base de datos de asistencias</button>
            <button class="button" onclick="logout()">Salir</button>
        </div>
    </div>

    <div class="container hidden" id="asistencia">
        <h2 class="title">Marca Ingreso-Asistencia</h2>
        <div class="form-group">
            <label for="dni">D.N.I:</label>
            <input type="text" id="dni">
        </div>
        <button class="button" onclick="searchStudent()">Buscar</button>
        <div id="search-result" class="hidden">
            <h3>RESULTADO DE BÚSQUEDA</h3>
            <p>Nombre: <span id="student-name"></span></p>
            <p>DNI: <span id="student-dni"></span></p>
            <h4>ULTIMAS ASISTENCIAS</h4>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>DNI</th>
                            <th>Semana</th>
                            <th>Asiste en la fecha</th>
                        </tr>
                    </thead>
                    <tbody id="attendance-records"></tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container hidden" id="presencia">
        <h2 class="title">Listado de Estudiantes Matriculados Modalidad Presencial</h2>
        <div class="form-group">
            <label for="dni-presencia">DNI:</label>
            <input type="text" id="dni-presencia">
        </div>
        <div class="form-group">
            <label for="apellido">Apellido:</label>
            <input type="text" id="apellido">
        </div>
        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre">
        </div>
        <div class="form-group">
            <label for="horario">Horario para Cursado:</label>
            <input type="text" id="horario">
        </div>
        <button class="button" onclick="searchMatriculados()">Buscar</button>
        <div id="matriculados-result" class="hidden">
            <!-- Aquí se mostrarán los días de asistencia -->
        </div>
    </div>

    <div class="container hidden" id="database">
        <h2 class="title">Listado de Asistencias e Ingreso a clases de los Estudiantes</h2>
        <div class="form-group">
            <label for="semana">Semana N°:</label>
            <input type="number" id="semana" min="0" max="100">
        </div>
        <div class="form-group">
            <label for="dia">Día:</label>
            <input type="text" id="dia">
        </div>
        <div class="form-group">
            <label for="hora-inicio">Hora Inicio:</label>
            <input type="time" id="hora-inicio">
        </div>
        <button class="button" onclick="searchDatabase()">Buscar</button>
        <div id="database-result" class="hidden">
            <!-- Aquí se mostrarán los registros de asistencia -->
        </div>
    </div>

    <script>
        function login() {
            var username = document.getElementById('username').value;
            var password = document.getElementById('password').value;
            if (username === 'Thomas Almada' && password === '2002') {
                document.getElementById('login-form').classList.add('hidden');
                document.getElementById('menu').classList.remove('hidden');
            } else {
                alert('Usuario o contraseña incorrectos');
            }
        }

        function showSection(section) {
            var sections = ['asistencia', 'presencia', 'database'];
            sections.forEach(function(sec) {
                document.getElementById(sec).classList.add('hidden');
            });
            document.getElementById(section).classList.remove('hidden');
        }

        function logout() {
            document.getElementById('menu').classList.add('hidden');
            document.getElementById('login-form').classList.remove('hidden');
        }

        function searchStudent() {
            var dni = document.getElementById('dni').value;
            // Aquí deberías agregar la lógica para buscar el estudiante por DNI
            // Y luego mostrar los resultados
            document.getElementById('search-result').classList.remove('hidden');
            document.getElementById('student-name').innerText = 'Juan Pérez';
            document.getElementById('student-dni').innerText = dni;
            document.getElementById('attendance-records').innerHTML = `
                <tr>
                    <td>${dni}</td>
                    <td>12</td>
                    <td>2024-05-15</td>
                </tr>
            `;
        }

        function searchMatriculados() {
            // Aquí deberías agregar la lógica para buscar los estudiantes matriculados
            document.getElementById('matriculados-result').classList.remove('hidden');
            // Mostrar resultados
        }

        function searchDatabase() {
            // Aquí deberías agregar la lógica para buscar en la base de datos de asistencias
            document.getElementById('database-result').classList.remove('hidden');
            // Mostrar resultados
        }
    </script>
</body>
